\newcommand{\piumeno}[1]{
\ifnum#1=1 +\fi
\ifnum#1=-1 -\fi
\ifnum#1>1 +#1\fi
\ifnum#1<-1 #1\fi
}
\newcommand{\piumenox}[1]{
	\ifnum#1=1 \fi
	\ifnum#1=-1 -\fi
	\ifnum#1>1 #1\fi
	\ifnum#1<-1 #1\fi
}
\newcommand{\piumenoxx}[1]{
	\ifnum#1=1 +1\fi
	\ifnum#1=-1 -1\fi
	\ifnum#1>1 +#1\fi
	\ifnum#1<-1 #1\fi
}
\newcommand{\binomiox}[3][x]{%
	\FPset\ca{#2}%
	\FPset\cb{#3}%
	(\ifnum\ca=1
	\else
	\ifnum\ca=-1
	-%
	\else
	\ca
	\fi
	\fi
	#1%
	\ifnum\cb=0
	\else
	\ifnum\cb>0
	+%
	\ifnum\cb=1
	#1
	\else
	\cb
	\fi
	\else
	\ifnum\cb=-1
	-#1
	\else
	\cb
	\fi
	\fi
	\fi)}
